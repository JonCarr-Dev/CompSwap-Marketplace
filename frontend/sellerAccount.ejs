<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Seller Account</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('header') %>
  <div class="tech-update"><p>Website/ Tech Updates</p></div>
  <nav class="navbar">
    <% const categories = ["CPU","CPU Cooler","Motherboard","Memory","Storage","GPU","PSU","Case","Case Fan","Thermal Paste","Other"];
       categories.forEach(cat => { %>
      <a href="/category/<%= cat.toLowerCase().replace(/\s+/g,'-') %>"><%= cat %></a>
    <% }); %>
  </nav>
  <div class="account-sections">
    <div class="section red"    data-panel="account-info">Account Information</div>
    <div class="section yellow" data-panel="shipping">Shipping / Returns</div>
    <div class="section purple" data-panel="requests">Listing Requests / Reviews</div>
    <div class="section green"  data-panel="management">Listing Management</div>
  </div>
  <div id="account-info" class="settings-panel">
    <h2>Account Information</h2>
    <form>
      <label>Username:</label>
      <input type="text" value="<%= user.username %>"><br>
      <label>Email:</label>
      <input type="email" value="<%= user.email %>"><br>
      <button type="button">Save Changes</button>
    </form>
  </div>
  <div id="shipping" class="settings-panel">
    <h2>Shipping / Returns Settings</h2>
    <p>Configure shipping rates, carriers, and return policies.</p>
    <button type="button" onclick="location.href='/seller/purchase'">Purchase Settings</button>
  </div>
  <div id="requests" class="settings-panel">
    <h2>Listing Requests / Reviews</h2>
    <p>Incoming trade, purchase requests, and reviews.</p>
    <button type="button" onclick="location.href='/seller/requests'">Listing Requests</button>
  </div>
  <div id="management" class="settings-panel">
    <h2>Listing Management</h2>
    <p>View, edit, or remove your active listings.</p>
    <button type="button" onclick="location.href='/listings/manage'">My Listings</button>
  </div>
  <script>
    document.querySelectorAll('.section').forEach(el => {
      el.addEventListener('click', () => {
        const target = el.getAttribute('data-panel')
        document.querySelectorAll('.settings-panel').forEach(p => p.classList.remove('active'))
        document.getElementById(target).classList.add('active')
        window.scrollTo({ top: 0, behavior: 'smooth' })
      })
    })
  </script>
</body>
</html>