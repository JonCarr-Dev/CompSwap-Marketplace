<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>CompSwap Homepage</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('header') %>

  <div class="tech-update"><p>Website/ Tech Updates</p></div>
  <nav class="navbar">
    <% 
      const categories = [
        "CPU","CPU Cooler","Motherboard","Memory",
        "Storage","GPU","PSU","Case","Case Fan",
        "Thermal Paste","Other"
      ];
      categories.forEach(cat => { 
    %>
      <a href="/category/<%= cat.toLowerCase().replace(/\s+/g,'-') %>">
        <%= cat %>
      </a>
    <% }) %>
  </nav>

  <div class="container">
    <div class="ad"><h3>Advertisement</h3></div>
    <div class="content">
      <section class="featured-listings">
        <h2>Featured Listings</h2>

        <% if (listings && listings.length) { %>
          <ul class="listing-list">
            <% listings.forEach(list => { %>
              <li>
                <a href="/listing/<%= list._id %>">
                  <%= list.title %> â€” $<%= list.price.toFixed(2) %>
                </a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No listings available.</p>
        <% } %>
      </section>
    </div>
    <div class="ad"><h3>Advertisement</h3></div>
  </div>
</body>
</html>